<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.mba2dna.wechkhassek.activity.LoginActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"  />


        <!-- LOGO -->

        <ImageView
            android:id="@+id/dirlogo"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/ic_logo1" />


    <com.rey.material.widget.EditText
        style="@style/Material.Widget.EditText.Light"
        android:id="@+id/UsernameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#33000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:inputType="textEmailAddress"
        android:layout_below="@id/dirlogo"
        android:ems="10"
        android:layout_alignLeft="@id/dirlogo"
        android:hint="Adresse Ã©lectronique"
        app:et_labelTextColor="@color/grey2"
        app:et_dividerColor="@color/colorPrimary"
        app:et_inputId="@+id/textfield_et_label_input"
        app:et_supportMode="none" />
    <com.rey.material.widget.EditText
        style="@style/Material.Widget.EditText.Light"
        android:id="@+id/PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#33000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_alignLeft="@+id/UsernameField"
        android:layout_below="@+id/UsernameField"
        android:ems="10"
        android:hint="@string/PassHint"
        android:inputType="textPassword"
        app:et_dividerColor="@color/colorPrimary"
        app:et_inputId="@+id/textfield_et_label_input"
        app:et_supportMode="none" />

    <com.rey.material.widget.Button
        style="@style/Material.Drawable.Ripple.Touch.MatchView"
        android:id="@+id/LoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PasswordField"
        android:layout_below="@+id/PasswordField"
        android:background="@drawable/yallowbtn_selector"
        android:minHeight="38dp"
        android:text="@string/loginBtnTxt"
        android:textColor="@android:color/white"
        app:rd_enable="true"/>


        <TextView
            android:id="@+id/Dinaninielabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/Dipaninilabel"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/ou"
            android:textSize="12sp" />
        <!--<com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ou"
            android:gravity="center" />-->
        <!--   <com.facebook.widget.LoginButton
             android:id="@+id/authButton"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/btn_sign_in"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dp" />-->
        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/enregistrerTxt"
            android:layout_below="@+id/ou"
            android:layout_alignRight="@+id/Dinaninielabel"
            android:layout_alignEnd="@+id/Dinaninielabel" />


</RelativeLayout>
