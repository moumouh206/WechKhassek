<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mba2dna.airalgerie.activity.HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mba2dna.airalgerie.activity.MainActivity">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/ic_map"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/windowBackground"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2">
            <TextView
                android:id="@+id/bienvenuelbl"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:text="BIENVENUE"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descriptionlbl"
                android:layout_below="@id/bienvenuelbl"
                android:layout_centerInParent="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:textColor="#434343"
                android:gravity="center_horizontal"
                android:text="WechKhassek est une application web/mobile permet d'aider les gens de trouver l'artisan le plus proche de chez eux afin de resoudre leur problems dans un temps limité, et Ainsi un espace publicitaire pour les artisans qui souhaitent avoir plus de visibilité" />
        </LinearLayout>

        <com.rey.material.widget.FloatingActionButton
            style="@style/Material.Widget.FloatingActionButton.Light"
            android:id="@+id/fab_image"
            app:fab_backgroundColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_iconSrc="@drawable/ic_magnify_black_36dp"
            app:fab_iconSize="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>

