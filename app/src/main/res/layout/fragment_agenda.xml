<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/merci_de_mentionner_les_jours_de_votre_disponibilit_"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp" />



    <com.rey.material.widget.Button
        android:id="@+id/ajoutdates"
        style="@style/Material.Drawable.Ripple.Touch.MatchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sprinnerSpecialiter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:drawableRight="@drawable/ic_calendar_white_24dp"
        android:minHeight="38dp"
        android:text="@string/enregistrer_les_dates_de_disponibilit_"
        android:textColor="@color/colorPrimary"
        app:rd_enable="true" />

</LinearLayout>
